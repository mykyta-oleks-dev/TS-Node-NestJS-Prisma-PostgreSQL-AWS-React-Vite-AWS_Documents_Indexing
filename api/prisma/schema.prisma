generator client {
  provider     = "prisma-client"
  output       = "../src/generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

enum Status {
  pending
  success
  error
}

model Document {
  id         String   @id @default(uuid())
  userEmail  String   @map("user_email")
  filename   String
  mimeType   String   @map("mime_type")
  uploadedAt DateTime @default(now())
  status     Status   @default(pending)

  @@map("documents")
}
