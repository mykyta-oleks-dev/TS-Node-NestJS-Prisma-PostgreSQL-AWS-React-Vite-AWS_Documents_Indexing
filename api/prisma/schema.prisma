generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Status {
  pending
  success
  error
}

model Document {
  id         Int      @id @default(autoincrement())
  userEmail  String
  filename   String
  uploadedAt DateTime @default(now())
  s3Url      String
  status     Status   @default(pending)
}
